<div class="container">
  <div class="card big">
    <div class="card-content">
      <span class="card-title center-align">Movist - Entrar</span>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "col s12") do |f| %>
          <div class="row">
            <div class="input-field col s12">
              <%= f.email_field :email, autofocus: true , class: 'validate', "data-error" => "Email invÃ¡lido" %>
              <%= f.label :email %><br />
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <%= f.password_field :password, autocomplete: "off" , class: 'validate' %>
              <%= f.label :password %><br />
            </div>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="row">
              <div class="input-field col s12">
                <%= f.check_box :remember_me, text: 'Lembrar' %>
                <%= f.label :remember_me, 'Lembrar-me' %>
              </div>
            </div>
          <% end -%>

          <div class="card-action">
            <%= f.submit "Log in" , class: 'waves-effect waves-light btn' %>
            <%= render "devise/shared/links" %>
          </div>
        <% end %>

    </div>
  </div>
</div>